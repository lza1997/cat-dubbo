<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd      
	 	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd
 	">
 	
 	
	<!-- consumer application name -->
	<dubbo:application name="pig-web-consumer" />
	<dubbo:consumer timeout="200000" check="false" retries="0" />
	<dubbo:registry address="${zookeeper.address}" />
	

	<!-- cms数据接口 -->
	<dubbo:reference interface="com.zs.pig.cms.api.service.CmsArticleService" id="CmsArticleService" />
	<dubbo:reference interface="com.zs.pig.cms.api.service.CmsCategoryService" id="CmsCategoryService" />
	<dubbo:reference interface="com.zs.pig.cms.api.service.CmsCommentService" id="CmsCommentService" />
	<dubbo:reference interface="com.zs.pig.cms.api.service.CmsLinkService" id="CmsLinkService" />
	<dubbo:reference interface="com.zs.pig.cms.api.service.CmsSiteService" id="CmsSiteService"/>
	<dubbo:reference interface="com.zs.pig.cms.api.service.CmsImgService" id="CmsImgService"/>
	
	<dubbo:reference interface="com.zs.pig.cms.api.service.GwInfoService" id="GwInfoService" />
	<dubbo:reference interface="com.zs.pig.cms.api.service.NavService" id="NavService" />
	<dubbo:reference interface="com.zs.pig.cms.api.service.ProductService" id="ProductService" />
	<dubbo:reference interface="com.zs.pig.cms.api.service.ProductTypeService" id="ProductTypeService" />
	<!-- blog数据接口 -->
	<dubbo:reference interface="com.zs.pig.blog.api.service.BlogTemplateService" id="BlogTemplateService"/>
	<dubbo:reference interface="com.zs.pig.blog.api.service.BloggerService" id="BloggerService" />
	<dubbo:reference interface="com.zs.pig.blog.api.service.BlogService" id="BlogService" />
	<dubbo:reference interface="com.zs.pig.blog.api.service.BlogTypeService" id="BlogTypeService" />
	<dubbo:reference interface="com.zs.pig.blog.api.service.CommentService" id="CommentService" />
	<dubbo:reference interface="com.zs.pig.blog.api.service.LinkService" id="LinkService" />
</beans>
